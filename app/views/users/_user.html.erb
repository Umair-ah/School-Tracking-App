
<b>Id:</b>
<%= link_to user.id, user_path(user) %>
<br>
<b>Email:</b>
<%= user.email %>
<br>
<b>Confirmation:</b>
<%= user.confirmed? %>
<br>
<b><%= 'sign_in_count'.humanize %>:</b>
<%= user.sign_in_count %>
<br>
<b><%= 'current_sign_in_at'.humanize %>:</b>
<%= user.current_sign_in_at %>
<br>
<b><%= 'last_sign_in_at'.humanize %>:</b>
<%= user.last_sign_in_at %>
<br>
<b><%= 'current_sign_in_ip'.humanize %>:</b>
<%= user.current_sign_in_ip %>
<br>
<b><%= 'last_sign_in_ip'.humanize %>:</b>
<%= user.last_sign_in_ip %><br/>

<b><%= 'locked_at'.humanize %>:</b>
<%= user.locked_at %><br/>

<b><%= 'roles'.humanize %>:</b>
<%= user.active_roles.join(", ") %>
<br>
<div class="d-flex align-items-center gap-2">
    <% if current_user.admin? %>
        <%= link_to "Edit roles", edit_user_path(user) %>
        <%= button_to ban_status(user), ban_user_path(user), method: :patch, class:"btn btn-danger btn-sm" %>
        <%= button_to "Delete", user, method: :delete, class:"btn btn-danger btn-sm mt-1" %>
    <% end %>
</div>
